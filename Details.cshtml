@model ORTastic.Models.CompraDetalle

@{
    ViewData["Title"] = "Detalles de la Compra";
}

<h1>Detalles de la Compra</h1>

<div>
    <h4>Compra ID: @Model.IdCompra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.NombreUsuario</dd>

        <dt class="col-sm-2">Evento:</dt>
        <dd class="col-sm-10">@Model.NombreEvento</dd>

        <dt class="col-sm-2">Cantidad de Entradas:</dt>
        <dd class="col-sm-10">@Model.CantidadEntradas</dd>

        <dt class="col-sm-2">Precio Total:</dt>
        <dd class="col-sm-10">@Model.PrecioTotal</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a Mis Compras</a>
</div>
